ROAD_DEICING = PREDICTED_SAFE,

PREDICTED_SAFE = (predicted_ice_formation -> PREDICTED_UNSAFE),

PREDICTED_UNSAFE = (ice_melts -> PREDICTED_SAFE 
                    | unsafe_for_use -> CLOSED 
                    | road_treated -> PREDICTED_SAFE),

CLOSED = (ice_melts -> PREDICTED_SAFE 
         | road_treated -> PREDICTED_SAFE).